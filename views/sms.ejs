<% include header %>

  <div class="container">
      <div class="row">
          <div class="col-md-6 col-md-offset-3" id="activity-container">

              <% include header-section %>

              <% include login-form %>

              <div role="tabpanel" class="tab-sms-chat-wrapper" style="display: none">
                  <!-- Nav tabs -->
                  <ul class="nav nav-tabs" role="tablist">
                      <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Send SMS</a></li>
                      <li role="presentation"><a href="chat" >Send Message</a></li>
                      <li role="presentation"><a href="group-chat" >Group Chat</a></li>
                  </ul>
              </div>

              <div class="hidden" id="logged-in">
                  <div class="clearfix">
                      <h3 class="text-center pull-left">Send SMS</h3>

                      <div class="pull-right logout-wrapper">
                          <button class="btn btn-warning btn-sm pull-right" id="logout-btn" title="Sign out">
                              <i class="glyphicon glyphicon-log-out"></i>
                          </button>
                          <p class="h4 pull-right">
                              Welcome <strong><span class="username"></span></strong>
                          </p>
                      </div>
                  </div>
                  <hr/>
                  <div id="sms-container">
                      <div id="sms-input">
                          <div class="form-group">
                              <label for="sms_from">Sender</label>
                              <input type="text" name="sms_from" id="sms_from" class="form-control"/>

                          </div>
                          <div class="form-group">
                              <label for="sms_to" class="required">Receiver <abbr title="required">*</abbr></label>
                              <input type="text" name="sms_to" id="sms_to" class="form-control"/>

                          </div>
                          <div class="form-group">
                              <label for="sms_message" class="required">Message <abbr title="required">*</abbr></label>
                              <input type="text" name="sms_message" id="sms_message" class="form-control"/>

                          </div>
                          <button name="button" type="button" class="btn btn-success" id="send-btn">Send</button>

                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
    <!--Js for example-->
    <script type="text/javascript" src="js/index.js"></script>
<% include footer %>
